generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order{
  idOrder String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  idUser String
  dateOrder DateTime @default(now())
  totalOrder Float 
  statusOrder String

  ProductOnOrder ProductOnOrder[]
}

model ProductOnOrder{
  order       Order     @relation(fields: [idOrder], references: [idOrder])
  idOrder     String @db.Uuid // relation scalar field (used in the `@relation` attribute above)
  idProduct String @db.Uuid// relation scalar field (used in the `@relation` attribute above)
  quantity Int

  @@id([idOrder, idProduct])
}
